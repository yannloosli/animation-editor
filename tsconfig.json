{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "lib": [
            "dom",
            "es2017",
            "esnext"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "./*"
            ]
        },
        "types": [
            "vite/client",
            "jest",
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "."
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
